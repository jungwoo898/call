# ğŸ—£ï¸ ìŒì„± ì¸ì‹ ì„œë¹„ìŠ¤ - Python 3.8 + CUDA 11.8 + PyTorch 2.1.2 (ê³ ì • ë²„ì „)
# speech-recognizer ì„œë¹„ìŠ¤ Dockerfile
# í‘œì¤€í™”ëœ Dockerfile.template ê¸°ë°˜

FROM nvidia/cuda:11.8.0-runtime-ubuntu20.04

# ì‹œìŠ¤í…œ íŒ¨í‚¤ì§€ ì—…ë°ì´íŠ¸ ë° Python 3.8 ì„¤ì¹˜
RUN apt-get update && apt-get install -y \
    software-properties-common \
    && add-apt-repository ppa:deadsnakes/ppa \
    && apt-get update \
    && apt-get install -y \
    python3.8 \
    python3.8-dev \
    python3-pip \
    build-essential \
    swig \
    libpulse-dev \
    libasound2-dev \
    cmake \
    locales \
    tzdata \
    git \
    && rm -rf /var/lib/apt/lists/*

# ë¡œì¼€ì¼ ë° ì‹œê°„ëŒ€ ì„¤ì •
ENV TZ=Asia/Seoul
ENV LANG=ko_KR.UTF-8
ENV LC_ALL=ko_KR.UTF-8
ENV PYTHONIOENCODING=utf-8
RUN echo "ko_KR.UTF-8 UTF-8" > /etc/locale.gen && \
    locale-gen ko_KR.UTF-8 && \
    ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && \
    echo $TZ > /etc/timezone

# ì‘ì—… ë””ë ‰í† ë¦¬ ì„¤ì •
WORKDIR /app

# Python í™˜ê²½ ì„¤ì •
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV CUDA_VISIBLE_DEVICES=0

# Python 3.8ìš© ê³µí†µ requirements ì„¤ì¹˜
COPY requirements_common_py38.txt .
RUN pip install --no-cache-dir -r requirements_common_py38.txt

# ì„œë¹„ìŠ¤ë³„ requirements ì„¤ì¹˜
COPY requirements.speech-recognizer.txt .
RUN pip install --no-cache-dir -r requirements.speech-recognizer.txt

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ì„ íƒì  íŒ¨í‚¤ì§€ ì„¤ì¹˜ (ì‹¤íŒ¨ ì‹œ ë¹Œë“œ ê³„ì†) â€“ ì´ë¯¸ wheel ì œê³µ ì‹œ ìŠ¤í‚µ
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
RUN pip install --no-cache-dir MPSENet==1.0.3 || echo "Optional package MPSENet not available, skipping"

# ---------------------------------------------------------------------------
# ctc-forced-aligner: ë¡œì»¬ wheel ìš°ì„ , ì—†ìœ¼ë©´ PyPI â†’ git Fallback
# ---------------------------------------------------------------------------
COPY docker_wheels/ctc_forced_aligner-*.whl /tmp/
RUN if ls /tmp/ctc_forced_aligner-*.whl 1> /dev/null 2>&1; then \
    pip install --no-cache-dir --ignore-requires-python /tmp/ctc_forced_aligner-*.whl && rm -f /tmp/ctc_forced_aligner-*.whl ; \
    else \
    pip install --no-cache-dir ctc-forced-aligner==1.0.2 || \
    pip install --no-cache-dir git+https://github.com/MahmoudAshraf97/ctc-forced-aligner.git ; \
    fi

# ì• í”Œë¦¬ì¼€ì´ì…˜ ì½”ë“œ ë³µì‚¬
COPY src/ ./src/
COPY config/ ./config/

# í¬íŠ¸ ë…¸ì¶œ
EXPOSE 8004

# í—¬ìŠ¤ì²´í¬
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8004/health || exit 1

# ì‹¤í–‰ ëª…ë ¹
CMD ["python", "-m", "src.audio.speech_recognizer"] 