# ğŸ—£ï¸ ìŒì„± ì¸ì‹ ì„œë¹„ìŠ¤ - Python 3.11 + CUDA 11.8 + PyTorch 2.1.2 (ê³ ì • ë²„ì „)
# speech-recognizer ì„œë¹„ìŠ¤ Dockerfile
# í‘œì¤€í™”ëœ Dockerfile.template ê¸°ë°˜

FROM nvidia/cuda:11.8.0-runtime-ubuntu20.04

# ì‹œìŠ¤í…œ íŒ¨í‚¤ì§€ ì—…ë°ì´íŠ¸ ë° í•„ìˆ˜ íŒ¨í‚¤ì§€ ì„¤ì¹˜
RUN apt-get update && apt-get install -y \
    software-properties-common \
    && add-apt-repository ppa:deadsnakes/ppa \
    && apt-get update \
    && apt-get install -y \
    python3.11 \
    python3.11-dev \
    python3-pip \
    ffmpeg \
    locales \
    tzdata \
    && rm -rf /var/lib/apt/lists/*

# ë¡œì¼€ì¼ ë° ì‹œê°„ëŒ€ ì„¤ì •
ENV TZ=Asia/Seoul
ENV LANG=ko_KR.UTF-8
ENV LC_ALL=ko_KR.UTF-8
ENV PYTHONIOENCODING=utf-8
RUN echo "ko_KR.UTF-8 UTF-8" > /etc/locale.gen && \
    locale-gen ko_KR.UTF-8 && \
    ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && \
    echo $TZ > /etc/timezone

# ì‘ì—… ë””ë ‰í† ë¦¬ ì„¤ì •
WORKDIR /app

# Python í™˜ê²½ ì„¤ì •
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV CUDA_VISIBLE_DEVICES=0

# ê³µí†µ requirements ì„¤ì¹˜
COPY requirements_common.txt .
RUN pip install --no-cache-dir -r requirements_common.txt

# ì„œë¹„ìŠ¤ë³„ requirements ì„¤ì¹˜
COPY requirements.speech-recognizer.txt .
RUN pip install --no-cache-dir -r requirements.speech-recognizer.txt

# ì• í”Œë¦¬ì¼€ì´ì…˜ ì½”ë“œ ë³µì‚¬
COPY src/ ./src/
COPY config/ ./config/

# í¬íŠ¸ ë…¸ì¶œ
EXPOSE 8003

# í—¬ìŠ¤ì²´í¬
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8003/health || exit 1

# ì‹¤í–‰ ëª…ë ¹
CMD ["python", "-m", "src.text.speech_recognizer"] 